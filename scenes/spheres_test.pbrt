LookAt 0 10 -3   0 0 -1   0 1 -1
Camera "perspective" "float fov" [22]

#Renderer "gpu"

Film "image" "integer xresolution" [800] "integer yresolution" [400]
"string filename" "pbrt.exr"

SurfaceIntegrator "path" "integer maxdepth" [3]
"string strategy" "all"

Sampler "lowdiscrepancy" "integer pixelsamples" [1]
PixelFilter "box"

WorldBegin

AttributeBegin
#Rotate 180 1 0 0
LightSource "infinite" "string mapname" ["textures/grace_latlong.exr"]
#LightSource "infinite" "string mapname" ["textures/grace_latlong.pfm"]
        "integer nsamples" [128]
AttributeEnd

AttributeBegin
Translate 1 0 -0.5
Material "mirror"
Shape "sphere" "float radius" [.5]
AttributeEnd


AttributeBegin
Translate 0 0 -0.5
Material "glass"
Shape "sphere" "float radius" [.5]
AttributeEnd

AttributeBegin
Translate 0 0 1e5
Material "matte"
Shape "sphere" "float radius" [1e5]
AttributeEnd

WorldEnd